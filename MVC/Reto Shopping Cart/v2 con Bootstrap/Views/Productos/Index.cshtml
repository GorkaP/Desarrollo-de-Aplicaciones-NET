@model IEnumerable<ShoppingCart.Models.Producto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    $(document).ready(function () {
        $('img')
            .wrap('<span style="display:inline-block"></span>')
            .css('display', 'block')
            .parent()
            .zoom();
    });

    $(document).ready(function () {
        $('a.photo').zoom();
    });

    // Using Colorbox with Zoom
    $(document).ready(function () {
        $('a.photo').zoom({
           
            callback: function () {
                $(this).colorbox({ href: this.src });
            }
        });
    });

</script>

<div class="container">

    <table class="table table-hover">
        <thead class="thread-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th  scope="col">
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th  scope="col">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>

                <th  scope="col">
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
                <th  scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion);
                    </td>
                    <td>
                        <img src="~/Content/Images/@item.Foto" width="60" />
                    </td>

                    <td>

                        <span><a class="btn btn-outline-info" href="@Url.Action("Buy", "Cart", new { id = item.Id })">Add to Cart</a></span>

                    </td>


                </tr>
            }
        </tbody>
    </table>

</div>


<div class="container">
    <div class="row">

  


    @foreach (var item in Model)
    {
        <!-- Begin card -->

        <div class="col-lg-4 border-primary">
            <div class="card bg-light"  style="width: 18rem;">

                <img class="card-img-top" src="~/Content/Images/@item.Foto" width="100">
                <div class="card-block">
                    <h4 class="card-title">@item.Nombre</h4>
                    <div class="meta">
                        @item.Precio euros
                    </div>
                    <div class="card-text">
                        @item.Descripcion
                    </div>
                </div>
                <div class="card-footer">
                    <span class="float-right">Joined in 2013</span>
                    <span><a class="btn btn-primary" href="@Url.Action("Buy", "Cart", new { id = item.Id })">Add to Cart</a></span>
                </div>
            </div>
        </div>
        <!-- end card -->
    }
       


    </div><!-- end row -->
</div><!-- end container -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-zoom/1.7.21/jquery.zoom.js"></script>

